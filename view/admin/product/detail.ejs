<%- include('../partial/head-admin.ejs')%>
<body>
<%-include('../partial/left-menu.ejs')%>
<%-include('../partial/header.ejs')%>


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Detail Product</h4>
                    </div>
                    <div class="card-body">
                        <form action="#">
                            <div class="row">
                                <div class="col-md-6 ">
                                    <div class="form-group">
                                        <label>Name Product</label>
                                        <div>
                                            <%= item.name %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Description</label>
                                        <div>
                                            <%= item.description%>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 ">
                                    <div class="form-group">
                                        <label>Category</label>
                                        <div>
                                            <%= item.category %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 ">
                                    <div class="form-group">
                                        <label>Key Word</label>
                                        <div>
                                            <%= item.key %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 ">
                                    <div class="form-group">
                                        <label>Trademark</label>
                                        <div>
                                            <%= item.trademark %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Price</label>
                                        <div>
                                            <%= item.price %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-10 ">
                                    <div class="form-group">
                                        <label>Thumbnail</label>
                                        <div>
                                            <img class="img-thumbnail w-50" src="<%= item.thumbnail %>" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row float-left">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Thumbnail small 1</label>
                                        <div>
                                            <img class="img-thumbnail" src="<%= item.thumbnail_sm_1 %>" alt="">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Thumbnail small 2</label>
                                        <div>
                                            <img class="img-thumbnail" src="<%= item.thumbnail_sm_2 %>" alt="">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 ">
                                    <div class="form-group">
                                        <label>Thumbnail small 3</label>
                                        <div>
                                            <img class="img-thumbnail" src="<%= item.thumbnail_sm_3 %>" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="clearfix"></div>
                        </form>
                        <div class="row">
                            <div class="card-footer">
                                <div class="form-group">
                                    <a href="/admin/product/list"><button class="poniter-help btn btn-info btn-fill">Back to list</button></a>
                                    <a href="/admin/product/edit?id=<%= item._id%>"><button class="poniter-help btn btn-primary btn-fill">Edit</button></a>
                                    <a href="/admin/product/delete?id=<%= item._id%>"><button class="poniter-help btn btn-danger btn-fill">Delete</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<%-include('../partial/footer.ejs')%>


<%- include('../partial/admin-script.ejs')%>
</body>

</html>